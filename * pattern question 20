
#include <iostream>
using namespace std;
int
main ()
{
  int n;
  cin >> n;

  int row = 1;
  while (row <= n)
    {
      int space = row - 1;
      while (space)
	{
	  cout << " ";
	  space--;
	}
      int col = 1, a = row;

      while (col <= n - row + 1)
	{

	  cout << a;
	  a++;
	  col++;


	}

      cout << endl;
      row++;
    }



}
