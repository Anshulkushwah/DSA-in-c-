
#include <iostream>

using namespace std;

int
main ()
{
  int n = 6, row, col;

  for (row = 1; row <= n; row++)
    {

      if (row == 1 || row == n)
	{
	  for (col = 1; col <= n - row + 1; col++)
	    {
	      cout << "*";
	    }

	}

      else
	{
	  cout << "*";
	  for (col = 1; col <= n - row - 1; col++)
	    {
	      cout << " ";
	    }

	  cout << "*";


	}

      cout << endl;

    }

  return 0;
}
