
#include <iostream>
#include <climits>
using namespace std;

int
getMaxFromArray (int arr[], int n)
{
  int ans = INT_MIN;

  for (int i = 0; i < n; i++)
    {
      ans = max (ans, arr[i]);
    }

  return ans;
}

int
main ()
{

  int arr[] = { 3, 4, 5, 6, 7, 8 };
  cout << " Maximum value is " << getMaxFromArray(arr,6) << endl;

  return 0;
}
