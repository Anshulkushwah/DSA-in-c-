
#include <iostream>

using namespace std;



void heapify(int arr[], int n, int i ){
        int largest = i;
        int left =2*i + 1;
        int right = 2*i +1;
        
        if(left <= n && arr[left] > arr[largest]){
            largest = left ;
        }
        if(right <= n && arr[right]> arr[largest]){
            largest = right;
        }
        
        if(largest != i){
            swap(arr[largest],arr[i]);
            heapify(arr, n , largest);
        }
    
}


int main()
{
    
int arr[] = {-1,2,6,8,3,7};

// logic fot build heap 

int n = 5 ;
for(int i = n/2; i>= 1 ; i--){
    heapify(arr,n,i);
}

cout<<"printing after building heap"<<endl;

for (int i = 1; i<=n; i++){
    cout<<arr[i] << " ";
    
}cout<< endl;

    return 0;
}
