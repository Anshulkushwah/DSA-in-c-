******************************************************************************/

#include <iostream>

using namespace std;

void
sum (int arr[3][3], int row, int col)
{
  int add = 0;
  
  for (int j = 0; j < col; j++)
    {
      for (int i = 0; i < row; i++)
	{
	  add = add + arr[i][j];
	}
      cout<<add<<" ";
      
      add = 0;
    }
    
}

int
main ()
{


  int arr[3][3] = { 1, 2, 3, 4, 5, 6, 7, 8, 9 };

  sum (arr, 3, 3);

  cout << "sab sahi chal rha hai";
  return 0;
}
