
#include <iostream>

using namespace std;

int
getLength (char arr[])
{

  int length = 0;
  int index = 0;
  while (arr[index] != '\0')
    {
      length++;
      index++;
    }

  return length;
}


int
main ()
{

  // creation 
  char name[10];

  // input
  cout << "ENTER YOUR NAME : ";
  cin >> name;

  // print
  cout << "Name is --> "<< name << endl ;
  cout<<" Length is -- > " << getLength(name);

  return 0;
}
